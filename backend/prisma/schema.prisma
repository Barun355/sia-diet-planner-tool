generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String    @id
  firstName     String
  lastName      String
  email         String?    @unique()
  contactNumber String?
  role          Role
  createdAt     DateTime
  updatedAt     DateTime?

  client        Clients?    @relation("User")
  mealCreatedBy MealPlans[] @relation("MealCreatedBy")
}

enum Role {
  CLIENT
  TEAM
  ADMIN
}

model Clients {
  id        String    @id @default(uuid())
  userId    String    @unique()
  coachId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  clientMeal MealPlans[] @relation("MealClient")

  user Users @relation("User", fields: [userId], references: [id], onDelete: Cascade)
}

model MealPlans {
  id        String @id @default(uuid())
  createdBy String
  clientId  String

  meals Json

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  client        Clients @relation("MealClient", fields: [clientId], references: [id], onDelete: Cascade)
  mealCreatedBy Users   @relation("MealCreatedBy", fields: [createdBy], references: [id], onDelete: Cascade)
}
